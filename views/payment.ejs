    <div class="row">
      <div class="col s12 m12">
        <h1>Payment</h1>





<div class="row">
          <div class="col s12 m12">
          </div>
        </div>
        <% if(result){ %>
          <div class="row">

            <% for(i in result) { %>
              <div class="col s6 m3">
                <div class="card blue-grey darken-1">
                  <div class="card-content white-text">
                    <ul>
                      <% for(j in result[i]) { %>

                        <% if(j == "Rate"){%>
                            <% x=result[i][j] %>
                            <li>$<%= x %> per night</li>

                        <%}else if (j == "Cost"){%>
                            <% x=result[i][j] %>
                            <li>$<%= x %> per person</li>
                        <%}else if(j == "Name"){%>
                            <span class="card-title"><%= result[i][j] %></span>
                        <%}else if (j == "reservationID"){%>
                          <li><b>Reservation ID</b> : <%= result[i][j] %></li>

                      <% }else{%>
                          <li><b><%= j %></b> : <%= result[i][j] %></li>
                      <% }} %>


                    </ul>
                  </div>
                </div>
              </div>
            <% } %>



        <% }else{ %>
          <h2>Error!!</h2>
          <p><%= error %></p>
        <% } %>
      </div>
    </div>








        <div class="row">
          <div class="col s12 m12">
            <div class="card">
              <div class="card-content ">
                <form method="POST" action="/confirmPayment">
                  <label>Card Type</label>
                  <input type="text" name="Type">
                  <br>
                  <label>Name on Card</label>
                  <input type="text" name="Name">
                  <br>
                  <label>Card Number</label>
                  <input type="text" name="CardNumber">
                  <br>
                  <label>Expiration</label>
                  <input type="date" name="Expiration">
                  <br><br>
                  <label>Enter Reservation ID to Confirm Purchase:</label>
                  <input type="text" name="ID">
                  <br><br>
                  <input type="submit" value="Complete Payment">
                </form>


              </div>
            </div>
          </div>
        </div>
           </div>
              </div>



    <!--JavaScript at end of body for optimized loading-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-beta/js/materialize.min.js"></script>
  </body>

</html>
